#:kivy 1.9.2
<Floors_page>:
    name : 'Floors_page'
    view : view
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'Images/Back.jpg'
    Image:    
        source :'Images/Back.jpg'
        allow_stretch: True
        keep_ratio: False
        size_hint: 1, 1

    Image:    
        source :'Images/LOGIN.jpg'
        allow_stretch: True
        keep_ratio: False
        size_hint: 0.1, 0.07
        pos_hint: {"x":0,"top":1}
    
    Button:
        background_color: 0, 0, 0, 0
        text: "Graphic"
        size_hint:0.1,0.07
        pos_hint:{"x":0.3,"top":1}
        on_release :
            root.manager.transition = NoTransition()
            app.root.current = 'Graphic_page'
    Button:
        background_color: 0, 0, 0, 0
        text: "Text"
        size_hint:0.1,0.07
        pos_hint:{"x":0.6,"top":1}
        on_release :
            root.manager.transition = NoTransition()
            app.root.current = 'page1'
    ScrollView:
        id: view
